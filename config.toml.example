[server]
host = "0.0.0.0"
port = 8081
log_level = "info"
session_secret = "change-me-to-a-random-string"
session_ttl_hours = 24

[library]
root_path = "/path/to/books"
book_extensions = ["fb2", "epub", "mobi", "pdf", "djvu", "zip"]
scan_zip = true
zip_codepage = "cp866"
inpx_enable = false

[database]
url = "sqlite://ropds.db?mode=rwc"

[opds]
title = "Rust OPDS Server"
subtitle = "Personal Library"
max_items = 30
split_items = 300
auth_required = true
show_covers = true
alphabet_menu = true
hide_doubles = true
covers_dir = "covers"

[scanner]
schedule_minutes = [0]
schedule_hours = [0, 12]
schedule_day_of_week = []
delete_logical = false

[converter]
fb2_to_epub = ""
fb2_to_mobi = ""
temp_dir = "/tmp"

[web]
language = "en"
theme = "light"

[upload]
allow_upload = false
upload_path = "uploads"
max_upload_size_mb = 100
